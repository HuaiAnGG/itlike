/* components/stageCard/stageCard.wxss */
.container {
  width: 100%;
  height: 200rpx;
  /* background-color: tomato; */
  display: flex;
  position: relative;
}

.container .num {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  background-color: white;
  position: absolute;
  left: -15rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 99;
}

.container .interface {
  width: 200rpx;
  height: 200rpx;
  /* background-color: blue; */
  position: relative;
}

.container .interface .interface_img {
  width: 100%;
  height: 100%;
}

.container .interface .mask {
  color: white;
  width: 100%;
  height: 100%;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.3);
  font-size: 60rpx;
  text-align: center;
  line-height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.container .detail {
  flex: 1;
  /* background-color: cyan; */
  /* position: relative; */
}

.container .detail .intro {
  width: 100%;
  height: 100%;
  /* background-color: tomato; */
  /* display: flex; */
  /* flex-direction: column; */
  padding: 10rpx;
  box-sizing: border-box;
}

.container .detail .intro .title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.container .detail .intro .item {
  font-size: 26rpx;
}

.container .detail .courseList {
  width: 100%;
  height: 100%;
  /* left: 0;
  top: 0;
  position: absolute; */
  /* background-color: red; */
}

.course-list-swiper {
  height: 100%;
}

.course-item {
  background: #fff;
  height: 100%;
  position: relative;
  margin-right: 10rpx;
}

.course-item .course-img {
  width: 100%;
  height: 100%;
}

.course-item .desc {
  font-size: 26rpx;
  width: 100%;
  line-height: 40rpx;
  color: black;
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}