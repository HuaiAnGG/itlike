.content .text {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10rpx;
}


.content .style1 .img {
  width: 100%;
  max-height: 500rpx;
  /* border: 1rpx solid rgba(0, 0, 0, 0.1); */
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.1);
}


.content .style24 {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content .style24 .img {
  width: 347rpx;
  height: 347rpx;
  margin-bottom: 16rpx;
  /* border: 1rpx solid rgba(0, 0, 0, 0.1); */
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.1);
}

.content .style356789 {
  display: flex;
  flex-wrap: wrap;
}

.content .style356789 .img {
  width: 225rpx;
  height: 225rpx;
  margin-bottom: 16rpx;
  /* border: 1rpx solid rgba(0, 0, 0, 0.1); */
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.1);
}

.content .style356789 .img:nth-child(2),
.content .style356789 .img:nth-child(5),
.content .style356789 .img:nth-child(8) {
  margin: 0 16rpx;
}

.location {
  font-size: 30rpx;
  color: #666;
  margin: 10rpx 0;
}