/* components/questionCard/questionCard.wxss */
@import "/style/icon-font.wxss";

.questionCard {
  box-sizing: border-box;
  padding: 20rpx;
  border-top: 1rpx solid gainsboro;
}

.top {
  height: 120rpx;
  display: flex;
  align-items: center;
}

.top .headerImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.top .otherMsg {
  flex: 1;
  /* background: tomato; */
  display: flex;
  flex-direction: column;
}

.top .otherMsg .name {
  color: #707070;
  font-size: 40rpx;
  font-weight: bold;
}

.top .otherMsg .time {
  color: #666;
  font-size: 26rpx;
}
