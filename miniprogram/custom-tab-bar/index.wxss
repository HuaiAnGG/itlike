/* miniprogram/coustom-tab-bar/index.wxss */
.tan-bar {
  height: 96rpx;
  width: 100%;
  border-top: 1rpx solid gray;
  background-color: white;
  /**
   * 绝对定位 fixed 
   */
  position: fixed;
  bottom: 0;
  left: 0;
}

.tab-border {
  width: 100%;
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  transform: scaleY(0.5);
  top: 0;
  left: 0;
}

.content-list {
  width: 100%;
  height: 100%;
  display: flex;
}

.content-item{
  flex: 1;
  /* background-color: brown; */
  /* border: 2rpx solid black; */
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content-item .icon{
  width: 54rpx;
  height: 54rpx;
  margin-bottom: 10rpx;
}

.content-item .title{
  font-size: 20rpx;
}