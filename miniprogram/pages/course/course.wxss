/* miniprogram/pages/course/course.wxss */
.live-content {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.live-content .top {
  width: 100%;
  height: 300rpx;
}

.live-content .top .img {
  width: 100%;
  height: 100%;
}

.live-content .bottom {
  width: 100%;
  height: 200rpx;
  /* background-color: green; */
  display: flex;
  margin-top: 10rpx;
}

.live-content .bottom .item {
  color: white;
  flex: 1;
  background-color: #db267e;
  margin: 0 5rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.live-content .bottom .item .title {
  padding: 5rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.live-content .bottom .item .desc {
  display: flex;
  flex-direction: column;
  font-size: 26;
}